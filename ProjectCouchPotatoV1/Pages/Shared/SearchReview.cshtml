@model ProjectCouchPotatoV1.Models.Review

<script src="/lib/jquery-3.7.1.min.js"></script>
<script src="/lib/vue3.js"></script>
<script src="/lib/axios.min.js"></script>
<script src="/lib/bootstrap.bundle.min.js"></script>
<link href="/lib/bootstrap.min.css" rel="stylesheet">
<link rel="stylesheet" href="/styles/Index.min.css">

<body class="review">

<div id="app">
    <div class="container">
        <div class="row align-items-center">
            <div class="col">
                <img src="https://image.tmdb.org/t/p/w500/@Model.poster_path" alt="Movie Image" class="img-fluid">
            </div>
            <div class="col">
                <div class="form-group">
                    <h1 class="display-4">@Model.Title</h1>
                    <p class="lead">@Model.Overview</p>
                    <label for="exampleFormControlTextarea1">Review</label>
                    <textarea class="form-control" id="exampleFormControlTextarea1" v-model="movie.ReviewText" rows="3"></textarea>
                    <button class="btn btn-secondary mt-2" v-on:click="submitForm">Submit</button>
                    <div>
                        <form class="navbar-brand" asp-area="" asp-page="/Index">
                            <button class="btn btn-secondary mt-2">Return to home</button>
                        </form>
                    </div>
                    <div v-if="submitSuccess" class="alert alert-success mt-2" role="alert">
                        Submit successful!
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

</body>


<script>
    const app = Vue.createApp({
        data() {
            return {
                movie: {
                    MovieId: "@Model.MovieId",
                    Title: "@Model.Title",
                    Overview: "@Model.Overview",
                    poster_path: "@Model.poster_path",
                    ReviewText: "",
                    vote_average: "@Model.vote_average",
                    vote_count: "@Model.vote_count",
                    release_date: "@Model.release_date",
                    original_language: "@Model.original_language",
                },
                showSuccess: false,

            };
        },
        methods: {
            submitForm() {
                axios.post('/movie/review', this.movie)
                    .then(response => {
                        this.movie = response.data;
                        this.submitSuccess = true;
                        console.log('Success:', response.data);
                    })
                    .catch(error => {
                        if (error.response.status === 409) {
                            this.errorMessage = "A review for this movie by you already exists.";
                        } else {
                            console.error('Error:', error);
                            this.errorMessage = "An error occurred while submitting the review.";
                        }
                    });
            },
        }
    });

    app.mount('#app');

</script>




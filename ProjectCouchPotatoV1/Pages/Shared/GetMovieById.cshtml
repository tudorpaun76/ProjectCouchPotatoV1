@model ProjectCouchPotatoV1.Models.Movie

<div id="app">
    <div class="jumbotron jumbotron-fluid">
        <div class="container">
            <h1 class="display-4">@Model.Title</h1>
            <p class="lead">@Model.Overview</p>
            <div class="row">
                <div class="col-md-8">
                    <img src="https://image.tmdb.org/t/p/w500/@Model.poster_path" alt="Movie Image" class="img-fluid">
                </div>
                <div class="col-md-4" id="app">
                    <div class="form-group">
                        <label for="exampleFormControlTextarea1">Review</label>
                        <textarea class="form-control" id="exampleFormControlTextarea1" v-model="movie.review" rows="3"></textarea>
                        <button class="btn btn-secondary mt-2" v-on:click="submitForm">Submit</button>
                        <div>
                            <button class="btn btn-secondary mt-2" v-on:click="goToHomePage">Return to home</button>
                        </div>
                        <div v-if="submitSuccess" class="alert alert-success" role="alert">
                            Submit successful!
                        </div>
                    </div>
                </div>
            </div>


        </div>
    </div>
</div>


<script src="https://cdn.jsdelivr.net/npm/vue@3"></script>
<script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>

<!-- Vue.js script -->
<script>
    const app = Vue.createApp({
        data() {
            return {
                movie: {
                    MovieId: "@Model.MovieId",
                    Title: "@Model.Title",
                    Overview: "@Model.Overview",
                    poster_path: "@Model.poster_path",
                    review: ""
                },
                showSuccess: false,

            };
        },
        methods: {
            submitForm() {
                axios.post('/movie/submit', this.movie)
                    .then(response => {
                        this.movie = response.data;
                        this.submitSuccess = true;
                        console.log('Success:', response.data);
                    })
                    .catch(error => {
                        console.error('Error:', error);
                    });
            }
        }
    });

    app.mount('#app');

</script>

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
<script src="/js/submitForm.js"></script>
<script src="https://cdn.jsdelivr.net/npm/vue@2"></script>
<script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>



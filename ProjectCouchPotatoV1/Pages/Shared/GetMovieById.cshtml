@model ProjectCouchPotatoV1.Models.Movie

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

<div>
    <div class="jumbotron jumbotron-fluid">
        <div class="container">
            <h1 class="display-4">@Model.Title</h1>
            <p class="lead">@Model.Overview</p>
            <div class="row">
                <div class="col-md-8">
                    <img src="https://image.tmdb.org/t/p/w500/@Model.poster_path" alt="Movie Image" class="img-fluid">
                </div>
                <div class="col-md-4">
                    <a class="btn btn-secondary" href="/">Return to Home</a>
                </div>
            </div>
        </div>
    </div>
</div>



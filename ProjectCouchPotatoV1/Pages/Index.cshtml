@page
@model ProjectCouchPotatoV1.Pages.IndexModel
@{
    ViewData["Title"] = "Home page";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
<div class="container mt-4">
    <form class="form-inline" method="get" action="/movie">
        <div class="form-group mx-sm-3 mb-2 p-2">
            <h2>Welcome to the Couch Potato Application!</h2>
            <label for="movieId" class="sr-only">Enter movie ID below</label>
            <input type="text" class="form-control p-2" id="movieId" name="id" placeholder="Movie ID" required />
            <button type="submit" class="btn btn-secondary mb-2 mt-2">Search</button>
        </div>
    </form>
</div>


<div class="mt-2" id="app">
    <div class="container">
        <h3>Your Reviews:</h3>
        <div class="row">
            <div v-for="movie in movies" :key="movie.identifier" class="col-md-6">
                <div class="card mb-3">
                    <div class="card-body">
                        <h5 class="card-title">{{ movie.title }}</h5>
                        <p class="card-text"><strong>Review:</strong> {{ movie.review }}</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



<script src="https://cdn.jsdelivr.net/npm/vue@3"></script>
<script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>

<script>
    const app = Vue.createApp({
        data() {
            return {
                movies: [],
            };
        },
        methods: {
            fetchMovies() {
                axios.get('/movie/getmovies')
                    .then(response => {
                        this.movies = response.data;
                    })
                    .catch(error => {
                        console.error('Error getting movies:', error);
                    });
            },
        },
        mounted() {
            this.fetchMovies();
        }
    });

    app.mount('#app');

</script>



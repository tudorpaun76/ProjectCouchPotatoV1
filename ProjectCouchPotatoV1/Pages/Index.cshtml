                                <div class="card-body">
                                    <h3 class="card-title text-center">
                                        <a type="button" style="float: left;" data-toggle="collapse" data-target="#collapseRandom" aria-expanded="false" aria-controls="collapseRandom" class="caret-toggle">
                                            <img src="~/svg/caret.svg" class="caret-icon">
                                        </a>
                                        Random Movie!
                                    </h3>
                                    <div class="collapse" id="collapseRandom">
                                        <div class="container">
                                            <div class="row">

                                                <div class="col d-flex justify-content-center">
                                                    <a type="button" v-on:click="fetchRandomMovie(randomMovie)">
                                                        <img src="~/svg/dice.svg">
                                                    </a>
